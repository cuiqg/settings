{
  "$schema": "https://raw.githubusercontents.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#00C5C7",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#77E4F7",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#FFE700",
          "template": "{{ .HEAD }} "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#43D426",
          "template": "‚ùØ "
        }
      ]
    }
  ]
}
